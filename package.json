{
  "name": "@pokedex/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "commit": "czg",
    "check-commit": "node ./scripts/commit-lint.js",
    "check-format": "nx format:check --all",
    "check-format:quick": "pretty-quick --check",
    "check-lock-files": "node ./scripts/check-lock-files.js",
    "prepare": "is-ci || husky",
    "preinstall": "node ./scripts/preinstall.js",
    "test": "nx run-many -t test",
    "e2e": "nx run-many -t e2e --projects ./e2e/*",
    "lint-package-lock": "eslint package-lock.json"
  },
  "private": true,
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  },
  "devDependencies": {
    "@nx/js": "21.3.1",
    "@nx/workspace": "21.3.1",
    "conventional-changelog-cli": "5.0.0",
    "cz-git": "1.12.0",
    "czg": "1.12.0",
    "husky": "9.1.7",
    "is-ci": "4.1.0",
    "nx": "21.3.1",
    "prettier": "3.6.2",
    "pretty-quick": "4.2.2",
    "semver": "7.7.2"
  },
  "nx": {
    "includedScripts": [
      "lint-package-lock",
      "check-commit",
      "check-format",
      "check-format:quick",
      "check-lock-files"
    ]
  }
}
