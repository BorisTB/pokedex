{
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*"
  ],
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@pokedex/data-access": ["libs/data-access/src/index.ts"],
      "@pokedex/ui": ["libs/ui/src/index.ts"]
    },
    "types": ["node", "jest"],
    "resolveJsonModule": true,
    "allowJs": true,
    "declarationMap": true
  }
}
